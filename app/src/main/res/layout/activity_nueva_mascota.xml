<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F8F5"
    tools:context=".NuevaMascotaActivity">

    <!-- TopBar -->
    <LinearLayout
        android:id="@+id/topBarNuevaMascota"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_form_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón atrás -->
        <LinearLayout
            android:id="@+id/btnAtrasNuevaMascota"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="9dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/icono_atras"
                android:src="@android:drawable/ic_media_previous"
                app:tint="#555555" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/atras_btn"
                android:textColor="#555555"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Título centrado -->
        <TextView
            android:id="@+id/txtTituloNuevaMascota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/nueva_mascota_titulo"
            android:textColor="#48C9B0"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Scroll con el formulario -->
    <ScrollView
        android:id="@+id/scrollNuevaMascota"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBarNuevaMascota">

        <LinearLayout
            android:id="@+id/formCardNuevaMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_form_card"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- Fila principal: foto a la izquierda, campos a la derecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <!-- Foto circular de la mascota -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgFotoMascota"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/bg_avatar_circle"
                        android:contentDescription="@string/nueva_mascota_foto_content"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces" />

                    <!-- Botones para cambiar / borrar foto -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnCambiarFotoMascota"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_input_field"
                            android:contentDescription="@string/nueva_mascota_btn_cambiar_foto"
                            android:padding="8dp"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="#555555"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="1dp" />

                        <ImageButton
                            android:id="@+id/btnBorrarFotoMascota"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_input_field"
                            android:contentDescription="@string/nueva_mascota_btn_borrar_foto"
                            android:padding="8dp"
                            android:src="@android:drawable/ic_menu_delete"
                            app:tint="#555555"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Campos de texto principales -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Nombre -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="@string/nueva_mascota_nombre_label"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edtNombreMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_input_field"
                        android:fontFamily="@font/nunitoregular"
                        android:hint="@string/nueva_mascota_nombre_hint"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:textColor="#333333"
                        android:textColorHint="#B0B0B0"
                        android:textSize="15sp" />

                    <!-- Especie -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="@string/nueva_mascota_especie_label"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edtEspecieMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_input_field"
                        android:fontFamily="@font/nunitoregular"
                        android:hint="@string/nueva_mascota_especie_hint"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:textColor="#333333"
                        android:textColorHint="#B0B0B0"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <!-- Raza -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="@string/nueva_mascota_raza_label"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edtRazaMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_input_field"
                        android:fontFamily="@font/nunitoregular"
                        android:hint="@string/nueva_mascota_raza_hint"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:textColor="#333333"
                        android:textColorHint="#B0B0B0"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fila: Nacimiento + Sexo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:weightSum="2">

                <!-- Nacimiento -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="@string/nueva_mascota_nacimiento_label"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/layoutFechaNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/txtFechaNacimiento"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunitoregular"
                            android:text="@string/nueva_mascota_nacimiento_hint"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/btnPickFechaNacimiento"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            app:tint="#B0B0B0" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sexo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="@string/nueva_mascota_sexo_label"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/spSexoMascota"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_form_card"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fila: Edad + Peso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:weightSum="2">

                <!-- Edad (solo lectura) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="@string/nueva_mascota_edad_label"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtEdadMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_input_field"
                        android:fontFamily="@font/nunitoregular"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:text="@string/nueva_mascota_edad_default"
                        android:textColor="#333333"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Peso -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="@string/nueva_mascota_peso_label"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edtPesoMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_field"
                        android:fontFamily="@font/nunitoregular"
                        android:gravity="center_vertical"
                        android:hint="@string/nueva_mascota_peso_hint"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:textColor="#333333"
                        android:textColorHint="#B0B0B0"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botones inferior: Cancelar / Guardar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnCancelarMascota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_field"
                    android:fontFamily="@font/poppinssemibold"
                    android:paddingVertical="12dp"
                    android:text="@string/nueva_mascota_btn_cancelar"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/btnGuardarMascota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_primary"
                    android:fontFamily="@font/poppinssemibold"
                    android:paddingVertical="12dp"
                    android:stateListAnimator="@null"
                    android:text="@string/nueva_mascota_btn_guardar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:backgroundTint="@null" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>