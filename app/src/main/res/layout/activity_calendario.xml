<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F8F5"
    tools:context=".CalendarioActivity">

    <!-- ========= TOP BAR (igual que MenuActivity) ========= -->
    <LinearLayout
        android:id="@+id/topBarMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_form_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Avatar + nombre -->
        <LinearLayout
            android:id="@+id/layoutPerfilUsuario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAvatarUsuario"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_avatar_circle"
                android:contentDescription="@string/icono_usuario"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_myplaces" />

            <TextView
                android:id="@+id/txtNombreUsuarioMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/menu_usuario_nombre"
                android:textColor="#48C9B0"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Botón Nueva Mascota -->
        <LinearLayout
            android:id="@+id/btnNuevaMascota"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/bg_btn_primary"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            android:paddingVertical="6dp"
            tools:ignore="TouchTargetSizeCheck">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/menu_btn_nueva_mascota"
                android:src="@android:drawable/ic_input_add"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/txtLabelNuevaMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/menu_btn_nueva_mascota"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ========= BOTTOM TABS (igual que MenuActivity) ========= -->
    <LinearLayout
        android:id="@+id/bottomTabsMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="1dp"
        android:background="@drawable/bg_form_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBarMenu">

        <LinearLayout
            android:id="@+id/tabInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="#000000" />

            <TextView
                android:id="@+id/txtTabInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/menu_tab_inicio"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabCalendario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_month"
                app:tint="#000000" />

            <TextView
                android:id="@+id/txtTabCalendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/menu_tab_calendario"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabAjustes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#000000" />

            <TextView
                android:id="@+id/txtTabAjustes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/menu_tab_ajustes"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomTabsMenu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ========= SPINNERS (Mascotas / Eventos) ========= -->
            <LinearLayout
                android:id="@+id/layoutFiltros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Spinner
                    android:id="@+id/spMascotas"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_form_card"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:spinnerMode="dropdown" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <Spinner
                    android:id="@+id/spTiposActividad"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_form_card"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- ========= CALENDARIO + BOTÓN AÑADIR ========= -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalendario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:dateTextAppearance="@style/CalendarDateText"
                        android:firstDayOfWeek="2"
                        android:weekDayTextAppearance="@style/CalendarWeekDayText" />

                    <!-- Botón + Añadir actividad -->
                    <LinearLayout
                        android:id="@+id/btnNuevaActividad"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_btn_primary"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="6dp"
                        tools:ignore="TouchTargetSizeCheck">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="6dp"
                            android:contentDescription="@string/cal_btn_nueva_actividad"
                            android:src="@android:drawable/ic_input_add"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/txtLabelNuevaActividad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="@string/cal_btn_nueva_actividad"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>