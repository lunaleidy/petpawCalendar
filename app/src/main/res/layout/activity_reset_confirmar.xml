<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F8F5"
    tools:context=".ResetConfirmarActivity">

    <!-- “App bar” personalizada -->
    <LinearLayout
        android:id="@+id/topBarResetConf"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_form_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón atrás -->
        <LinearLayout
            android:id="@+id/btnAtrasResetConf"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="9dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/icono_atras"
                android:src="@android:drawable/ic_media_previous"
                app:tint="#555555" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/atras_btn"
                android:textColor="#555555"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Título centrado -->
        <TextView
            android:id="@+id/txtTituloResetConf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/reset_conf_titulo"
            android:textColor="#48C9B0"
            android:textSize="20sp"
            app:layout_constraintHorizontal_weight="1" />
    </LinearLayout>

    <!-- Tarjeta del formulario -->
    <LinearLayout
        android:id="@+id/formCardResetConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_form_card"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBarResetConf">

        <!-- Títulos -->
        <TextView
            android:id="@+id/txtSubtituloResetConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:text="@string/reset_conf_subtitulo"
            android:textColor="#E67E22"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtDescripcionResetConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/nunitoregular"
            android:gravity="center"
            android:text="@string/reset_conf_descripcion"
            android:textColor="#7F8C8D"
            android:textSize="15sp" />

        <!-- Email -->
        <TextView
            android:id="@+id/lblEmailResetConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/email_label"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/icono_email"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#B0B0B0" />

            <EditText
                android:id="@+id/edtEmailResetConf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:autofillHints="emailAddress"
                android:background="@android:color/transparent"
                android:fontFamily="@font/nunitoregular"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:maxWidth="320dp"
                android:padding="5dp"
                android:textColor="#333333"
                android:textColorHint="#B0B0B0"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Código -->
        <TextView
            android:id="@+id/lblCodigoResetConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/reset_conf_codigo_label"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/icono_codigo"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="#B0B0B0" />

            <EditText
                android:id="@+id/edtCodigoResetConf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/nunitoregular"
                android:hint="@string/reset_conf_codigo_hint"
                android:inputType="number"
                android:maxWidth="320dp"
                android:padding="5dp"
                android:textColor="#333333"
                android:textColorHint="#B0B0B0"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Contraseña nueva -->
        <TextView
            android:id="@+id/lblNuevaClaveResetConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/reset_conf_pass_label"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/icono_pass"
                android:src="@android:drawable/ic_lock_idle_lock"
                app:tint="#B0B0B0" />

            <EditText
                android:id="@+id/edtNuevaClaveResetConf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:autofillHints="password"
                android:background="@android:color/transparent"
                android:fontFamily="@font/nunitoregular"
                android:hint="@string/reset_conf_pass_hint"
                android:inputType="textPassword"
                android:maxWidth="320dp"
                android:padding="5dp"
                android:textColor="#333333"
                android:textColorHint="#B0B0B0"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imgToggleNuevaClave"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/icono_verpass"
                android:src="@android:drawable/ic_menu_view"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <!-- Confirmar contraseña -->
        <TextView
            android:id="@+id/lblConfirmarClaveResetConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/reset_conf_pass_confirm_label"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/icono_pass"
                android:src="@android:drawable/ic_lock_idle_lock"
                app:tint="#B0B0B0" />

            <EditText
                android:id="@+id/edtConfirmarClaveResetConf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:autofillHints="password"
                android:background="@android:color/transparent"
                android:fontFamily="@font/nunitoregular"
                android:hint="@string/reset_conf_pass_confirm_hint"
                android:inputType="textPassword"
                android:maxWidth="320dp"
                android:padding="5dp"
                android:textColor="#333333"
                android:textColorHint="#B0B0B0"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imgToggleConfirmarClave"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/icono_verpass"
                android:src="@android:drawable/ic_menu_view"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <!-- Texto pequeño con requisitos -->
        <TextView
            android:id="@+id/txtResetConfRequisitos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/nunitoregular"
            android:text="@string/reset_conf_requisitos"
            android:textColor="#7F8C8D"
            android:textSize="12sp" />

        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/btnConfirmarReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_primary"
            android:fontFamily="@font/poppinssemibold"
            android:paddingVertical="12dp"
            android:stateListAnimator="@null"
            android:text="@string/reset_conf_btn_confirmar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>